{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "propertyNames": {
    "type": "string",
    "pattern": "^[a-z0-9._-]+$"
  },
  "additionalProperties": {
    "type": "object",
    "required": [
      "name",
      "signals",
      "country"
    ],
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1
      },
      "logo": {
        "type": "string",
        "minLength": 0
      },
      "signals": {
        "type": "object",
        "properties": {
          "iframe_url": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 0
          },
          "m3u8_url": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 0
          },
          "yt_id": {
            "type": "string"
          },
          "yt_embed": {
            "type": "string"
          },
          "yt_playlist": {
            "type": "string"
          },
          "twitch_id": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "anyOf": [
          {
            "required": [
              "m3u8_url"
            ]
          },
          {
            "required": [
              "iframe_url"
            ]
          }
        ]
      },
      "website": {
        "type": "string",
        "minLength": 0
      },
      "category": {
        "type": "string",
        "minLength": 0
      },
      "country": {
        "type": "string",
        "minLength": 2,
        "maxLength": 3
      }
    },
    "additionalProperties": false
  }
}